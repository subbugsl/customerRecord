<mvc:View
    controllerName="com.eros.customerrecord.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:layout="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
        class="fullPageBackground smallForm"
    >
        <content>
            <SearchField
                id="_IDGenSearchField"
                width="500px"
                class="sapUiSmallMarginBeginEnd"
                placeholder="Enter Your registered Mobile Number"
                search="onSearchNumber"
            />
            <Panel
                expandable="false"
                headerText="Basic Details"
                class="sapUiSmallMarginBottom sapUiSmallMarginBegin sapUiSmallMarginTop sapUiMediumMarginEnd colorBox"
                width="auto"
            >
                <content>
                    <VBox
                        width="40%"
                        class="sapUiMediumMarginBegin sapUiSmallMarginBottom sapUiSmallMarginTop"
                    >
                    <Label
                            required="true"
                            text="Customer Type"
                        />
                        <Select
                            width="40%"
                            id="customerType"
                            change="onCustomerTypeChange"
                            selectedKey="{custModel>/CustomerType}"
                        >
                            <items>
                                <core:Item
                                    key="0"
                                    text=""
                                />
                                <core:Item
                                    key="LOCAL"
                                    text="LOCAL"
                                />
                                <core:Item
                                    key="TOURIST"
                                    text="TOURIST"
                                />
                            </items>
                        </Select>
                        <Label text="Mobile Number" required="true" class="sapUiTinyMarginBottom sapUiTinyMarginTop" />
                        <FlexBox
                            width="40%"
                            justifyContent="Start"
                            alignItems="Center"
                        >
                            <ComboBox
                                selectedKey="{custModel>/Code}"
                                showSecondaryValues="true"
                                items="{ path: '/CountryCodesSet', sorter: { path: 'CountryCode' } }"
                                filterSecondaryValues="true"
                                class="smallCombo"


                            >
                                <core:ListItem
                                    key="{CountryCode}"
                                    text="{CountryCode}"
                                    additionalText="{CountryName}"
                                />
                            </ComboBox>
                            <Input
                                class="sapUiSmallMarginBegin"
                                id="mobileNumber"
                                type="Number"
                                value="{custModel>/Mobile}"
                            />
                        </FlexBox>

                        <Label text="First Name" class="sapUiTinyMarginTop" />
                        <Input
                            width="40%"
                            id="firstName"
                            value="{custModel>/FirstName}"
                        />

                        <Label text="Last Name" class="sapUiTinyMarginTop" />
                        <Input
                            width="40%"
                            id="lastName"
                            value="{custModel>/LastName}"
                        />

                        <Label text="Email" class="sapUiTinyMarginTop" />
                        <Input
                            width="40%"
                            id="email"
                            type="Email"
                            value="{custModel>/Email}"
                        />

                        <Label text="Date of Birth" class="sapUiTinyMarginTop"/>
                        <!-- <DatePicker
                            displayFormat="dd MMMM yyyy"
  valueFormat="yyyy-MM-dd"
                            width="40%"
                            id="dob"
                            value="{custModel>/BirthDate}"
                        /> -->
                        <DatePicker id="birthDate"
                            width="40%"
                            value="{
    path: 'custModel>/BirthDate',
    type: 'sap.ui.model.type.Date',
    formatOptions: {
      pattern: 'dd-MMM-yy'
    },
    constraints: {
      nullable: true
    }
  }"
                        />
                         <Label  text="TRN Number" class="sapUiTinyMarginTop"/>
  <Input value="{custModel>/TrnNumber}" class="customInputHeight" maxlength="30" width="40%"/>
                        <Label text="Nationality" class="sapUiTinyMarginTop" />

                            <ComboBox width="40%"
                                showSecondaryValues="true"
                                filterSecondaryValues="true"
                                selectedKey="{custModel>/Nationality}"
                                items="{ path: '/CountryCodesSet', sorter: { path: 'Country' } }"
                                class="trnSmallWidth"
                            >
                                <core:ListItem
                                    key="{Country}"
                                    text="{CountryName}"
                                    additionalText="{Country}"
                                />
                            </ComboBox>

                            <Label text="Country of Residence" class="sapUiTinyMarginTop" />

                            <ComboBox width="40%"
                                showSecondaryValues="true"
                                filterSecondaryValues="true"
                                selectedKey="{custModel>/Residence}"
                                items="{ path: '/CountryCodesSet', sorter: { path: 'Country' } }"
                            >
                                <core:ListItem
                                    key="{Country}"
                                    text="{CountryName}"
                                    additionalText="{Country}"
                                />
                            </ComboBox>

                        
                    </VBox>
                </content>
            </Panel>
            <Panel
                expandable="true"
                class="sapUiSmallMarginBottom sapUiSmallMarginBegin sapUiSmallMarginTop sapUiMediumMarginEnd colorBox"
            >
                <headerToolbar>
                    <OverflowToolbar style="Clear">
                        <Title text="Address Details" />
                        <ToolbarSpacer />
                        <Button
                            class="sapUiMediumMarginEnd"
                            text="Add More Address"
                            press="onAddAddress"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                    <HBox justifyContent="Start">
                        <VBox
                            width="30%"
                            class="sapUiMediumMarginBegin"
                        >
                            <Label text="Address Type" class="sapUiTinyMarginTop" />
                            <Select id="addHomeType" width="50%">
                                <items>
                                    <core:Item
                                        key="0"
                                        text=""
                                    />
                                    <core:Item
                                        key="1"
                                        text="HOME"
                                    />
                                </items>
                            </Select>
                            <Label text="Address Line 1" class="sapUiTinyMarginTop" />
                            <Input value="{custModel>/HomeAddressLine1}" width="50%" />
                            <Label text="Address Line 2"  class="sapUiTinyMarginTop"/>
                            <Input value="{custModel>/HomeAddressLine2}" width="50%"/>
                            <Label text="Street / PO Box" class="sapUiTinyMarginTop" />
                            <Input value="{custModel>/HomeStreet}" width="50%" />
                            <Label text="City"  class="sapUiTinyMarginTop"/>
                            <Input value="{custModel>/HomeCity}" width="50%"  />
                            <Label text="Country" class="sapUiTinyMarginTop" />

                            <ComboBox
                                showSecondaryValues="true"
                                filterSecondaryValues="true"
                                selectedKey="{custModel>/HomeCountry}"
                                width="50%"
                                items="{ path: '/CountryCodesSet', sorter: { path: 'Country' } }"
                            >
                                <core:ListItem
                                    key="{Country}"
                                    text="{CountryName}"
                                    additionalText="{Country}"
                                />
                            </ComboBox>
                        </VBox>
                        <VBox
                            id="workSection"
                            visible="false"
                            width="30%"
                            class="sapUiMediumMarginBeginEnd"
                        >
                            <Label text="Address Type"  class="sapUiTinyMarginTop"/>
                            <Select id="addWorkType">
                                <items>
                                    <core:Item
                                        key="0"
                                        text=""
                                    />
                                    <core:Item
                                        key="2"
                                        text="WORK"
                                    />
                                </items>
                            </Select>
                            <Label text="Address Line 1" class="sapUiTinyMarginTop"/>
                            <Input value="{custModel>/OfficeAddressLine1}" />
                            <Label text="Address Line 2" />
                            <Input value="{custModel>/OfficeAddressLine2}" />
                            <Label text="Street / PO Box" />
                            <Input value="{custModel>/OfficeStreet}" />
                            <Label text="City" />
                            <Input value="{custModel>/OfficeCity}" />
                            <Label text="Country" />
                            <ComboBox
                                showSecondaryValues="true"
                                filterSecondaryValues="true"
                                selectedKey="{custModel>/OfficeCountry}"
                                items="{ path: '/CountryCodesSet', sorter: { path: 'Country' } }"
                            >
                                <core:ListItem
                                    key="{Country}"
                                   text="{CountryName}"
                                    additionalText="{Country}"
                                />
                            </ComboBox>
                        </VBox>
                        <VBox
                            id="otherSection"
                            visible="false"
                            width="30%"
                            class="sapUiMediumMarginBeginEnd"
                        >
                            <Label text="Address Type" />
                            <Select id="addOtherType">
                                <items>
                                    <core:Item
                                        key="3"
                                        text="OTHER"
                                    />
                                </items>
                            </Select>
                            <Label text="Address Line 1" />
                            <Input value="{custModel>/OtherAddressLine1}" />
                            <Label text="Address Line 2" />
                            <Input value="{custModel>/OtherAddressLine2}" />
                            <Label text="Street / PO Box" />
                            <Input value="{custModel>/OtherStreet}" />
                            <Label text="City" />
                            <Input value="{custModel>/OtherCity}" />
                            <Label text="Country" />
                            <ComboBox
                                showSecondaryValues="true"
                                filterSecondaryValues="true"
                                selectedKey="{custModel>/OtherCountry}"
                                items="{ path: '/CountryCodesSet', sorter: { path: 'Country' } }"
                            >
                                <core:ListItem
                                    key="{Country}"
                                    text="{CountryName}"
                                    additionalText="{Country}"
                                />
                            </ComboBox>
                        </VBox>
                    </HBox>
                </content>
            </Panel>
     
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Save"
                    type="Accept"
                    press="onSave"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
